@model IEnumerable<JavaFloristClient.Models.Cart>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                Total
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @(item.Quantity * item.Price)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<label>Total Price</label>
<input id="totalPrice"/>

<script>
    // JavaScript code to calculate and set the total price
    var totalPrice = 0;

    // Loop through each item and calculate the total price
    @foreach (var item in Model)
    {
        <text>
        var itemPrice = @item.Price;
        var itemQuantity = @item.Quantity;
        totalPrice += (itemPrice * itemQuantity);
        </text>
    }

        // Set the calculated total price to the hidden input field
        document.getElementById("totalPrice").value = totalPrice;
</script>