@model IEnumerable<JavaFloristClient.Models.Order>
@{
    Layout = "~/Views/Shared/UserLayout.cshtml";
}
<body>
    <div class="breadcrumb-area pt-35 pb-35 bg-gray-3">
        <div class="container">
            <div class="breadcrumb-content text-center">
                <ul>
                    <li>
                        <a asp-action="Index">Home</a>
                    </li>
                    <li class="active">My Order</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="cart-main-area pt-90 pb-100">
        <center>
            <div>
                <h3 class="cart-page-title">Your Order</h3>
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                        <div class="table-content table-responsive cart-table-content">
                            <table>
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>OrderDay</th>
                                        <th>ReceiveDay</th>
                                        <th>RceiverName</th>
                                        <th>RceiverAddress</th>
                                        <th>Message</th>
                                        <th>Total</th>
                                        <th>Status</th>
                                        <th>Detail</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <form asp-action="UpdateCart" method="post">
                                        <tr>
                                            <td class="product-name">
                                                <a href="#">@item.Id</a>
                                            </td>
                                            <td class="product-name">@item.OrderDate</td>
                                            <td class="product-name">@item.ReceiveDate</td>
                                            <td class="product-name">@item.Receiver.Name</td>
                                            <td class="product-name">@item.Receiver.Address</td>
                                            <td class="product-name">@item.Occasion.Message</td>
                                            <td class="product-price-cart"><span class="amount">$@item.Amount</span></td>
                                            <td class="product-name">@item.Status.Type</td>
                                            <td class="product-name">
                                                <a asp-action="OrderDetails" asp-route-id="@item.Id" class="btn btn-secondary">Details</a>
                                            </td>
                                        </tr>
                                        </form>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="container">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="cart-shiping-update-wrapper">
                                    <div class="cart-shiping-update">
                                        <a href="#">Continue Shopping</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        </div>
                    </div>
                </div>
            </div>
        </center>
    </div>
</body>