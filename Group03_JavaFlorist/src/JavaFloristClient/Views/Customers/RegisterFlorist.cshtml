        function kiemtra() {
            /^$/
            //Name
            var sName = document.getElementById("txtName").value;
            var reName = /^[\w ]+$/; ///^[A-Za-z0-9]+$/;
            if ((!reName.test(sName)) || (sName == "")) {
                alert("Username is invalid")
                document.getElementById("txtName").focus();
                return false;
            }
            var sPass = document.getElementById("txtPass").value;
            var rePass = /^[\w ]+$/; ///^[A-Za-z0-9]+$/;
            if ((!rePass.test(sPass)) || (sPass == "")) {
                alert("Password is invalid")
                document.getElementById("txtPass").focus();
                return false;
            }
            //Mail
            var sMail = document.getElementById("txtMail").value;
            var reMail = /^\w+[]\w+[.]\w+([.]\w+)?$/; //
            if (!reMail.test(sMail)) {
                alert("Mail is invalid")
                document.getElementById("txtMail").focus();
                return false;
            }
            alert("Register successfully!");
            //Phone
            var sPhone = document.getElementById("txtPhone").value;
            var rePhone = /^\d{8,12}$/;
            if (!rePhone.test(sPhone)) {
                alert("Phone is invalid")
                document.getElementById("txtPhone").focus();
                return false;
            }
            //Class
            var sClass = document.getElementById("txtClass").value;
            var reClass = /^[T]\d{1}[.]\d{4}[.][MAE]\d{1}$/; //T1.2203.E1
            if (!reClass.test(sClass)) {
                alert("Class is invalid")
                document.getElementById("txtClass").focus();
                return false;
            }

        }
